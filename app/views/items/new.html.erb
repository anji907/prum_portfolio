<h1><%= @item.category.name %>に項目を追加</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @item) do |f| %>
      <%= render 'shared/error_messages', object: @item %>
      <%= f.hidden_field :category_id, value: @item.category.id %>
      <%= f.hidden_field :created_at, value: @item.created_at %>
      <%= hidden_field_tag :selected_value, @selected_value %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :learning_time %>
      <%= f.number_field :learning_time, class: 'form-control' %>

      <%= f.submit "追加する", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>